<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QR Code Generator</title>
  </head>
  <body>
    <div style="display: flex; flex-wrap: wrap; margin: 5px">
      <% for (let i = 0; i < numDivs; i++) { %>
      <div
        style="
          width: 80px;
          height: 225px;
          display: flex;
          margin: 5px;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          border: 1px solid black;
        "
      >
        <h3 style="text-align: center">I am a NOMAD</h3>
        <!-- Display the QR code image using the data URL -->
        <img
          style="height: 70px; width: 70px"
          src="<%= qrCodeDataUrl %>"
          alt="QR Code"
        />
        <p style="text-align: center">Scan and take part in my journey</p>
      </div>
      <% } %>
    </div>
  </body>
</html>
